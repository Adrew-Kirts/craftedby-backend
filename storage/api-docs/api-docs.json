{
    "openapi": "3.0.0",
    "info": {
        "title": "CraftedBy API",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get a list of (filtered) products",
                "operationId": "e8dee54b09adbe3622e56a4f4f19ecb0",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search by (partial) name",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "color",
                        "in": "query",
                        "description": "Add color filter (e.g. blue, red, yellow)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Add category filter (e.g. nourriture, meubles, jouets)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "material",
                        "in": "query",
                        "description": "Filter by product material (e.g. céramique, plâtre, bois)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "rating",
                        "in": "query",
                        "description": "Filter by product rating (e.g. 1, 2, 5)",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "priceRange.min",
                        "in": "query",
                        "description": "Minimum price range for products",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "decimal"
                        }
                    },
                    {
                        "name": "priceRange.max",
                        "in": "query",
                        "description": "Maximum price range for products",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "decimal"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Invalid request"
                    },
                    "404": {
                        "description": "Product(s) not found"
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Display a specific product",
                "description": "Display the specified resource.",
                "operationId": "b2dc537014e0b7a417594278d020f99d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Product ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "Product(s) not found"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get a list of users",
                "description": "Display a listing of the resource.",
                "operationId": "5a61fd217e7500976e1ae5c5662a4903",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        }
    }
}